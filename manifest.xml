<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Information sur le module -->
        <odoo>
            <data>
                <!-- Information sur le module -->
                <record id="module_info" model="ir.module.module">
                    <field name="name">visite_management</field>
                    <field name="summary">Gestion des visites</field>
                    <field name="description">Module pour gérer les visites dans une entreprise</field>
                    <field name="version">15.0.1.0.0</field>
                    <field name="author">Yeo Ali</field>
                    <field name="category">Gestion</field>
                    <!-- pour ajouter une icon au projet -->
                    <field name="icon">icon.png</field>
                </record>

                <!-- Vue pour afficher la liste des visites -->
                <record id="view_visite_tree" model="ir.ui.view">
                    <field name="name">visite_management.visite.tree</field>
                    <field name="model">visite_management.visite</field>
                    <field name="arch" type="xml">
                        <tree>
                            <field name="date_visite"/>
                            <field name="heure_visite"/>
                            <field name="visiteur"/>
                            <field name="entreprise"/>
                        </tree>
                    </field>
                </record>

                <!-- Vue pour ajouter ou modifier une visite -->
                <record id="view_visite_form" model="ir.ui.view">
                    <field name="name">visite_management.visite.form</field>
                    <field name="model">visite_management.visite</field>
                    <field name="arch" type="xml">
                        <form>
                            <sheet>
                                <group>
                                    <field name="date_visite"/>
                                    <field name="heure_visite"/>
                                    <field name="visiteur"/>
                                    <field name="entreprise"/>
                                    <field name="objet_visite"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </record>

                <!-- Menu pour accéder aux visites -->
                <menuitem id="menu_visite" name="Gestion des visites" sequence="30"/>
                <menuitem id="menu_visite_list" name="Liste des visites" parent="menu_visite" action="action_visite_list"/>
                <menuitem id="menu_visite_create" name="Créer une visite" parent="menu_visite" action="action_visite_create"/>

                <!-- Actions pour lier les vues aux menus -->
                <record id="action_visite_list" model="ir.actions.act_window">
                    <field name="name">Liste des visites</field>
                    <field name="res_model">visite_management.visite</field>
                    <field name="view_mode">tree,form</field>
                </record>
                <record id="action_visite_create" model="ir.actions.act_window">
                    <field name="name">Créer une visite</field>
                    <field name="res_model">visite_management.visite</field>
                    <field name="view_mode">form</field>
                </record>

            </data>
        </odoo>
    </data>
</odoo>
